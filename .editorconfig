# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.ts]
quote_type = single

[*.md]
indent_style = space
max_line_length = off

[*.json]
indent_style = space
indent_size = 2

